<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_login_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bzx.vmovie.microfilm.activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@mipmap/login_bg"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/rl_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/rl_user_number"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <View
                        android:id="@+id/phone_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#cccccc" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/phone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="账号"
                    android:textColor="#1a1a1a"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/input_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/search_input_del"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@id/input_delete"
                    android:layout_toRightOf="@id/phone_name"
                    android:background="#00ffffff"
                    android:focusable="false"
                    android:hint="请输入账号"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textColorHint="#b8b8b8"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/key_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/key_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp">

                    <View
                        android:id="@+id/key_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#cccccc" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/key_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="密码"
                    android:textColor="#1a1a1a"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/key_name">

                    <LinearLayout
                        android:id="@+id/lin_keyimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_key"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/login_icon_eye_default" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_key_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/lin_keyimg"
                        android:visibility="gone"
                        android:src="@mipmap/search_input_del" />

                    <EditText
                        android:id="@+id/key"
                        android:layout_width="fill_parent"
                        android:layout_height="54dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_key_delete"
                        android:background="#00ffffff"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="请输入密码"
                        android:maxLength="32"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="#1a1a1a"
                        android:textColorHint="#b8b8b8"
                        android:textSize="16sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_piccheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/piccheck_bg"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <View
                        android:id="@+id/piccheck_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#cccccc" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageview_piccheck"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/piccheck_number"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imageview_piccheck"
                    android:background="#00ffffff"
                    android:focusable="false"
                    android:hint="请输入图形验证码"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textColorHint="#b8b8b8"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--登录按钮-->
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/shape_login_btn"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingEnd="70dp"
                    android:paddingStart="70dp"
                    android:paddingTop="10dp"
                    android:text="登录"
                    android:textColor="@color/color_white"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="140dp">

                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="使用社交平台登录注册"
                        android:textColor="@color/color_gray_9"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/tv_share"
                        android:background="@color/color_gray_9" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_share"
                        android:background="@color/color_gray_9" />

                </RelativeLayout>

                <!--登录从QQ-->
                <ImageView
                    android:id="@+id/iv_login_from_qq"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/login_icon1" />

                <!--从新浪登录-->
                <ImageView
                    android:id="@+id/iv_login_from_sina"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/iv_login_from_qq"
                    android:layout_marginEnd="80dp"
                    android:layout_toStartOf="@id/iv_login_from_qq"
                    android:src="@mipmap/login_icon3" />

                <!--登录从微信-->
                <ImageView
                    android:id="@+id/iv_login_from_wechat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/iv_login_from_qq"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@id/iv_login_from_qq"
                    android:src="@mipmap/login_icon2" />

                <!--版权-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="270dp"
                    android:gravity="center"
                    android:text="©bzx"
                    android:textColor="#aaaaaa" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <android.inputmethodservice.KeyboardView
                    android:id="@+id/keyboard_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="#ECECEC"
                    android:keyBackground="@drawable/btn_keyboard_key"
                    android:keyTextColor="#525252"
                    android:visibility="visible"
                    android:shadowRadius="0"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
